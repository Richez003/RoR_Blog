<%= form_with url: user_posts_path, scope: :post do |f| %>
  <%= f.label :title, "Title:" %></br >
  <%= f.text_field :title, placeholder: "Article title" %>
  <%= f.label :text, "Article Description" %></br >
  <%= f.text_area :text, placeholder: "Write article here..." %></br >
  <%= f.submit "Submit post", disable_with: 'Submiting...' %>
<% end %>
