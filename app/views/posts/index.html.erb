<h3>User's Posts</h3>
<section>
<div class = "userProfile">
    <div class = "photo">
        <%= image_tag('user.jpg', class: "userPix")  %>
    </div>
    <div class = "details">
        <h2><%= @user.name %></h2>
        <p class = "PostCount" >
            Number of posts: <%= @user.posts_counter %>
            <% if @user.posts_counter.nil?%><%= "0" %>
            <%end%>
        </p>
    </div>
</div>

<%= @posts.each do |post| %>
<%= render post%>
<% end %>
</section>


